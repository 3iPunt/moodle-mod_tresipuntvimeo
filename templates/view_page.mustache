<div data-region="mod_tresipuntvimeo">
    <h2>{{ name }}</h2>
    <div class="iframe_container">
        <iframe src="{{ src }}"
                width="{{ width }}"
                height="{{ height }}"
                frameborder="{{ frameborder }}"
                allow="autoplay; fullscreen; picture-in-picture"
                allowfullscreen
                title="{{ title }}">
        </iframe>
    </div>
    <p class="intro">{{{ intro }}}</p>
</div>


